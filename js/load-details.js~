    document.write(projectName + "</a></h4>");
    document.write(city + "</th></tr></thead>\n");
    // Start of details table body
    document.write("<tbody>\n");
    // Project description
    document.write("<tr><td>" + desc + "</td></tr>");
    document.write("</tbody>\n");
    
    document.write("</table>");
   /* name
